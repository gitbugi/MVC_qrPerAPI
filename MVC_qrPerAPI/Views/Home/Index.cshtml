@model MVC_qrPerAPI.Models.IndexView
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="de">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <!--<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />-->
	<link href="~/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="d-flex align-items-center justify-content-center" style="height: 100vh">
    <div style="width:500px;" class="text-center">
    <form action="/home/index" method="post" class="row" style="border: 1px solid grey; padding: 50px; border-radius: 10%">
            <h1 style="text-align: center; margin-bottom: 50px;">QR Code per image-chart</h1>
            <label asp-for="Url" class="column" ></label>
            <input asp-for="Url" class="form-control mb-3 text-center" />    
            
        <label asp-for="Breite"></label>
            <input asp-for="Breite" class="form-control mb-3 text-center" />

        <label asp-for="Hoehe"></label>
            <input asp-for="Hoehe" class="form-control mb-3 text-center" />
        
        <label asp-for="VF"></label>
            <input asp-for="VF" type="color" style="width: 60px" class="container text-center mb-3" />
        
        <label asp-for="HF"></label>
            <input asp-for="HF" type="color" style="width: 60px" class="container text-center mb-3" />

        <button type="submit" class="btn btn-primary mb-3 mt-3">Erzeuge QR</button>
    </form>
    </div>
    @if (ViewBag.src != null)
    {
        <div class ="container text-center">
            <img src=@ViewBag.src />
        </div>
    }
	<script src="~/wwwroot/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
